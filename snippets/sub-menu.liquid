{% for link in linklists[sub-menu].links %}
  {% if linklists[link.handle] != empty %}
    {% assign link_count = linklists[link.handle].links | size %}
    <div class="dropdown_container" data-dropdown="{{ link.handle }}">
      <div class="dropdown menu cgc-dropdown">
        <div class="dropdown_content {% if link_count < 4 %}dropdown_narrow{% endif %} container">
          {% for sublink in linklists[link.handle].links %}

            <div class="dropdown_column menu-item-box four columns" style="background:
               linear-gradient(
                 rgba(0, 0, 0, 0.45),
                 rgba(0, 0, 0, 0.45)
               ),
               url({{ sublink.object.image | img_url: 'large' }});
               background-size: 100%;
               background-position: center;
               background-repeat: no-repeat;">
               <div id="overlay"></div>
               <div class="submenu-text-content">

                <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                <p>Explore</p>
                <div class="explore-container"><div class="explore-line"></div></div>
               </div>
             </div>
            {% cycle link.handle: '', '', '', '', '<div class="dropdown_row"></div>' %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}

