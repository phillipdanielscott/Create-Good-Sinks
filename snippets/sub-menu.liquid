{% for link in linklists[sub-menu].links %}
  {% if linklists[link.handle] != empty %}
    {% assign link_count = linklists[link.handle].links | size %}
    <div class="dropdown_container" data-dropdown="{{ link.handle }}">
      <div class="dropdown menu cgc-dropdown">
        <div class="dropdown_content {% if link_count < 4 %}dropdown_narrow{% endif %} container full-width">

          <div class="bottom-menu-wrapper">
          {% for sublink in linklists[link.handle].links %}

            {% if sublink.title == "Reviews"%}

            <div class="dropdown_column five columns cgc_dropdown_column">

                <a href="{{ sublink.url }}" style="color:black;">{{ sublink.title }}</a>

             </div>

             {% elsif sublink.title == "FAQ-cgc" %}

             <div class="dropdown_column five columns cgc_dropdown_column">

                 <a href="{{ sublink.url }}" style="color:black;">{{ sublink.title }}</a>

              </div>

            {% else %}

            <div class="dropdown_column menu-item-box five columns" style="background:
               linear-gradient(
                 rgba(0, 0, 0, 0.6),
                 rgba(0, 0, 0, 0.6)
               ),
               url({{ sublink.object.image | img_url: 'large' }});
               background-size: 100%;
               background-position: center;
               background-repeat: no-repeat;">
               <div id="overlay"></div>
               <div class="submenu-text-content">

                <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                <!-- <p>Explore</p>
                <div class="explore-container"><div class="explore-line"></div></div> -->
               </div>
             </div>

            {% endif %}



            {% cycle link.handle: '', '', '', '', '<div class="dropdown_row"></div>' %}
          {% endfor %}
          </div>

        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}
