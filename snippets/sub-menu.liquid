{% for link in linklists[sub-menu].links %}
  {% if linklists[link.handle] != empty %}
    {% assign link_count = linklists[link.handle].links | size %}
    <div class="dropdown_container" data-dropdown="{{ link.handle }}">
      <div class="dropdown menu">
        <div class="dropdown_content {% if link_count < 4 %}dropdown_narrow{% endif %}">
          {% for sublink in linklists[link.handle].links %}
            <div class="dropdown_column cgc_dropdown_column">

    {% if sublink.title == "Reviews"%}

    <ul class="{% if linklists[sublink.handle] != empty %}dropdown_title{% else %}dropdown_item{% endif %}">

      <li>
        <a href="{{ sublink.url }}" style="color:black !important;">{{ sublink.title }}</a>
      </li>

    {% elsif sublink.title == "FAQ-cgc" %}

    <ul class="{% if linklists[sublink.handle] != empty %}dropdown_title{% else %}dropdown_item{% endif %}">

      <li>
        <a href="{{ sublink.url }}" style="color:black !important;">{{ sublink.title }}</a>
      </li>

    {% else %}

              <ul class="{% if linklists[sublink.handle] != empty %}dropdown_title{% else %}dropdown_item{% endif %} product-image-tab" style="background:
                 linear-gradient(
                   rgba(0, 0, 0, 0.6),
                   rgba(0, 0, 0, 0.6)
                 ),
                 url({{ sublink.object.image | img_url: 'large' }});
                 background-size: 100%;
                 background-position: center;
                 background-repeat: no-repeat;">

                    <li class="product-image-link">
                      <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                    </li>

                  {% endif %}


              </ul>

              {% if linklists[sublink.handle] != empty %}
                <ul>
                  {% for subsublink in linklists[sublink.handle].links %}
                    <li>
                      <a href="{{ subsublink.url }}" class="testing-link">{{ subsublink.title }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
            {% cycle link.handle: '', '', '', '', '<div class="dropdown_row"></div>' %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
{% endfor %}


