<div class="review-wrapper container full-width">
<h1>{{ page.title }}</h1>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'image-carousel'%}

    {%- if block.settings.image-slide-1 -%}
      {%- assign image_slide_one = block.settings.image-slide-1| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_one = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.image-slide-2 -%}
      {%- assign image_slide_two = block.settings.image-slide-2| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_two = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.image-slide-3 -%}
      {%- assign image_slide_three = block.settings.image-slide-3| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_three = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.image-slide-4 -%}
      {%- assign image_slide_four = block.settings.image-slide-4| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_four = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.image-slide-5 -%}
      {%- assign image_slide_five = block.settings.image-slide-5| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_five = 'blank.svg' | asset_url -%}
    {%- endif -%}
    <div class="review-carousel-wrapper">
      <div class="owl-carousel owl-theme owl-loaded owl-drag review-image-slider">
          <div class="item review-slide-1" style="background-image:url( {{ image_slide_one }});"></div>
          <div class="item review-slide-2" style="background-image:url( {{ image_slide_two }});"></div>
          <div class="item review-slide-3" style="background-image:url( {{ image_slide_three }});"></div>
          <div class="item review-slide-4" style="background-image:url( {{ image_slide_four }});"></div>
          <div class="item review-slide-5" style="background-image:url( {{ image_slide_five }});"></div>
      </div>
    </div>


    <script type="text/javascript">
    $(".owl-carousel").owlCarousel({
      lazyLoad:true,
      loop:true,
      autoplay:true,
      autoplayTimeout:8000,
      autoplayHoverPause:true,
      mouseDrag:true,
      touchDrag:true,
      singleItem: true,
      items : 1,
      pagination:false,
      navigation:true
    });
    </script>

    {% when 'four-block-review'%}

    {%- if block.settings.review-icon-1 -%}
      {%- assign review_icon_one = block.settings.review-icon-1| img_url: '1000x' -%}
    {%- else -%}
      {%- assign review_icon_one = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.review-icon-2-%}
      {%- assign review_icon_two = block.settings.review-icon-2| img_url: '1000x' -%}
    {%- else -%}
      {%- assign review_icon_two = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.review-icon-3 -%}
      {%- assign review_icon_three = block.settings.review-icon-3| img_url: '1000x' -%}
    {%- else -%}
      {%- assign review_icon_three = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if block.settings.review-icon-4 -%}
      {%- assign review_icon_four = block.settings.review-icon-4| img_url: '1000x' -%}
    {%- else -%}
      {%- assign review_icon_four = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {% if block.settings.border-line-media %}

      <div class="border-line">
      </div>

    {% endif %}

    <div class="media-review-container container">
    <h3>{{ block.settings.four-block-title }}</h3>
      <div class="media-review-block one-half-cgc">
        <div class="review-wrapper" style="background-color:{{ block.settings.block-bg-color }}">
          <div class="quote-icon-wrapper">
            <img src="{{ 'quote-icon.svg' | asset_url }}" alt="">
          </div>
          <div class="media-review-text-content">
            {{ block.settings.review-quote-1 }}
          </div>
          <div class="review-company-icon">
            <span>AS SEEN ON</span>
            <img src="{{ review_icon_one }}" alt="">
          </div>
        </div>
      </div>
      <div class="media-review-block one-half-cgc">
        <div class="review-wrapper" style="background-color:{{ block.settings.block-bg-color }}">
          <div class="quote-icon-wrapper">
            <img src="{{ 'quote-icon.svg' | asset_url }}" alt="">
          </div>
          <div class="media-review-text-content">
            {{ block.settings.review-quote-2 }}
          </div>
          <div class="review-company-icon">
            <span>AS SEEN ON</span>
            <img src="{{ review_icon_two }}" alt="">
          </div>
        </div>
      </div>
      <div class="media-review-block one-half-cgc">
        <div class="review-wrapper" style="background-color:{{ block.settings.block-bg-color }}">
          <div class="quote-icon-wrapper">
            <img src="{{ 'quote-icon.svg' | asset_url }}" alt="">
          </div>
          <div class="media-review-text-content">
            {{ block.settings.review-quote-3 }}
          </div>
          <div class="review-company-icon">
            <span>AS SEEN ON</span>
            <img src="{{ review_icon_three }}" alt="">
          </div>
        </div>
      </div>
      <div class="media-review-block one-half-cgc">
        <div class="review-wrapper" style="background-color:{{ block.settings.block-bg-color }}">
          <div class="quote-icon-wrapper">
            <img src="{{ 'quote-icon.svg' | asset_url }}" alt="">
          </div>
          <div class="media-review-text-content">
            {{ block.settings.review-quote-4 }}
          </div>
          <div class="review-company-icon">
            <span>AS SEEN ON</span>
            <img src="{{ review_icon_four }}" alt="">
          </div>
        </div>
      </div>
    </div>

  {% when 'leave-a-review'%}

  {% if block.settings.border-line-review %}

    <div class="border-line">
    </div>

  {% endif %}
    <div class="leave-review-container container">
      <h3>{{ block.settings.leave-review-section-title }}</h3>
      <div class="leave-review-content-wrapper">
        <div class="review-tab">
          <div class="review-tab-content" style="background-color:{{ block.settings.tab-bg-color }}; height:100%;">
            <img src="{{ block.settings.review-tab-icon-one | img_url: '500x' }}" alt="">
          </div>
        </div>
        <div class="review-tab" >
          <div class="review-tab-content" style="background-color:{{ block.settings.tab-bg-color }}; height:100%;">
            <img src="{{ block.settings.review-tab-icon-two | img_url: '500x' }}" alt="">
          </div>
        </div>
      </div>
    </div>

  {% endcase %}
{% endfor %}

</div>





