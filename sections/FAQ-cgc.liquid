<div class="faq-wrapper container">
  <h1>{{ page.title | remove: "-cgc" }}</h1>

    {%- if section.settings.image-slide-1 -%}
      {%- assign image_slide_one = section.settings.image-slide-1| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_one = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if section.settings.image-slide-2 -%}
      {%- assign image_slide_two = section.settings.image-slide-2| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_two = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if section.settings.image-slide-3 -%}
      {%- assign image_slide_three = section.settings.image-slide-3| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_three = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if section.settings.image-slide-4 -%}
      {%- assign image_slide_four = section.settings.image-slide-4| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_four = 'blank.svg' | asset_url -%}
    {%- endif -%}

    {%- if section.settings.image-slide-5 -%}
      {%- assign image_slide_five = section.settings.image-slide-5| img_url: '1800x' -%}
    {%- else -%}
      {%- assign image_slide_five = 'blank.svg' | asset_url -%}
    {%- endif -%}





      <div class="review-carousel-wrapper faq-carousel-wrapper">
        <div class="owl-carousel owl-theme owl-loaded owl-drag review-image-slider">
            <div class="item review-slide-1" style="background-image:url( {{ image_slide_one }}); background-position:center; background-repeat: no-repeat; background-size: cover;"></div>
            <div class="item review-slide-2" style="background-image:url( {{ image_slide_two }}); background-position:center; background-repeat: no-repeat; background-size: cover;"></div>
            <div class="item review-slide-3" style="background-image:url( {{ image_slide_three }}); background-position:center; background-repeat: no-repeat; background-size: cover;"></div>
            <div class="item review-slide-4" style="background-image:url( {{ image_slide_four }}); background-position:center; background-repeat: no-repeat; background-size: cover;"></div>
            <div class="item review-slide-5" style="background-image:url( {{ image_slide_five }}); background-position:center; background-repeat: no-repeat; background-size: cover;"></div>
        </div>
      </div>



    <script type="text/javascript">
    $(".owl-carousel").owlCarousel({
      lazyLoad:true,
      loop:true,
      autoplay:true,
      autoplayTimeout:8000,
      autoplayHoverPause:true,
      mouseDrag:true,
      touchDrag:true,
      singleItem: true,
      items : 1,
      pagination:false,
      itemsDesktop : false,
      itemsDesktopSmall : false,
      itemsTablet: false,
      nav:true,
      navText:["<div class='nav-btn prev-slide'><i class='fas fa-angle-left review-angle-left'></i></div>",
              "<div class='nav-btn next-slide'><i class='fas fa-angle-right review-angle-right'></i></div>"],
      dots: true
    });
    </script>

</div>

    <div class="faq-question-wrapper full-width-cgc" style="background-color:{{ section.settings.faq-bg-color }};">

      <div class="faq-content-container container">
        {% for block in section.blocks %}
            {% case block.type %}

            {% when "faq-question"%}

            <div class="faq-spacer">
              <button class="collapsible"><i class="far fa-question-circle"></i><span class="faq-text-question">{{ block.settings.faq-question }}</span></button>
              <div class="collapsibleContent">
                <div class="faq-answer">{{ block.settings.faq-answer }}</div>
              </div>
            </div>

            {% when "faq-with-images"%}

            {%- if block.settings.faq-image-one -%}
              {%- assign faq_image_one = block.settings.faq-image-one | img_url: '1000x' -%}
            {%- else -%}
              {%- assign faq_image_one = 'blank.svg' | asset_url -%}
            {%- endif -%}

            {%- if block.settings.faq-image-two -%}
              {%- assign faq_image_two = block.settings.faq-image-two | img_url: '1000x' -%}
            {%- else -%}
              {%- assign faq_image_two = 'blank.svg' | asset_url -%}
            {%- endif -%}

            {%- if block.settings.faq-image-three -%}
              {%- assign faq_image_three = block.settings.faq-image-three | img_url: '1000x' -%}
            {%- else -%}
              {%- assign faq_image_three = 'blank.svg' | asset_url -%}
            {%- endif -%}

            <div class="faq-spacer">
              <button class="collapsible"><i class="far fa-question-circle"></i><span class="faq-text-question">{{ block.settings.faq-question-with-image }}</span></button>
              <div class="collapsibleContent">
                <img src="{{ faq_image_one }}" alt="">
                <div class="faq-answer">{{ block.settings.faq-answer-with-image }}</div>
                <img src="{{ faq_image_two }}" alt="">
                <div class="faq-answer">{{ block.settings.faq-answer-with-image-two }}</div>
                <img src="{{ faq_image_three }}" alt="">
                <div class="faq-answer">{{ block.settings.faq-answer-with-image-three }}</div>
              </div>
            </div>

            {% when "faq-two-images"%}


            {%- if block.settings.faq-two-image-one -%}
              {%- assign faq_image_two_one = block.settings.faq-two-image-one | img_url: '1000x' -%}
            {%- else -%}
              {%- assign faq_image_two_one = 'blank.svg' | asset_url -%}
            {%- endif -%}

            {%- if block.settings.faq-two-image-two -%}
              {%- assign faq_image_two_two = block.settings.faq-two-image-two | img_url: '1000x' -%}
            {%- else -%}
              {%- assign faq_image_two_two = 'blank.svg' | asset_url -%}
            {%- endif -%}

            <div class="faq-spacer">
              <button class="collapsible"><i class="far fa-question-circle"></i><span class="faq-text-question">{{ block.settings.faq-two-image-question }}</span></button>
              <div class="collapsibleContent">
                <div class="faq-answer">{{ block.settings.faq-two-image-answer }}</div>
                <span>{{block.settings.faq-image-title-one }}</span>
                <img src="{{ faq_image_two_one }}" alt="">
                <span>{{block.settings.faq-image-title-two }}</span>
                <img src="{{ faq_image_two_two }}" alt="">
              </div>
            </div>



          {% endcase %}
        {% endfor %}
      </div>

    </div>





<style>
  .custom-template{
    width: 100%;
    padding: 0px;
   }
</style>

