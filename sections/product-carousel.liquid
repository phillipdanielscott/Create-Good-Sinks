<div class="cgc-carousel-wrapper">
  <div class="owl-carousel owl-theme">
      <div class="item">
      <h2 style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.featured-slide-title }}</h2>
      <div class="carousel-text-underline" style="border: 2px solid {{ section.settings.slide-bg-color }}"></div>
      <div class="featured-bg-color" style="background-color:{{ section.settings.slide-bg-color }}"></div></div>
      <h6>{{ section.settings.details-one}}</h6>
      <p>{{ section.settings.details-two }}</p>
      <p>{{ section.settings.details-three }}</p>
      <div class="item"><h4>2</h4></div>
      <div class="item"><h4>3</h4></div>

  </div>
</div>

