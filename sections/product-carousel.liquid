<div class="cgc-carousel-wrapper">
  <div class="owl-carousel owl-theme">
      <div class="item">
      <div class="featured-bg-color" style="background-color:{{ section.settings.slide-bg-color }}"></div>

      <div class="carousel-text-content">
        <h2 style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.featured-slide-title }}</h2>
        <div class="carousel-text-underline" style="border: 2px solid {{ section.settings.slide-bg-color }}"></div>
        <p style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.details-one}}</p>
        <p style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.details-two }}</p>
        <p style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.details-three }}</p>
        <p style="color:{{ section.settings.slide-bg-color }}">{{ section.settings.details-four }}</p>
      </div>
       <img src="{{ section.settings.product-image | img_url: '1024x' }}" alt="" class="carousel-product-image">
      </div>
      <div class="item"><h4>2</h4></div>
      <div class="item"><h4>3</h4></div>

  </div>
</div>


<script type="text/javascript">
 $(".owl-carousel").owlCarousel({
   lazyLoad:true,
   loop:true,
   autoplay:false,
   autoplayTimeout:8000,
   autoplayHoverPause:true,
   mouseDrag:true,
   touchDrag:true,
   singleItem: true,
   items : 1,
   itemsDesktop : false,
   itemsDesktopSmall : false,
   itemsTablet: false,
   itemsMobile : false
 });
</script>


{% schema %}
{
  "name": "Product carousel slide",
  "settings": [
  {
   "id": "featured-slide-title",
   "type": "text",
   "label": "Featured product title",
   "default": "Title"
  },
  {
   "id": "featured-slide-description",
   "type": "textarea",
   "label": "Featured product description",
   "default": "Featured Description"
  },
  {
   "id": "details-one",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-two",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-three",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-four",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
      "type": "image_picker",
      "id": "product-image",
      "label": "Product Image"
  },
  {
      "type": "image_picker",
      "id": "Featured-product-full-bg",
      "label": "Full background image (alternative to featured product slides)"
  },
  {
     "type":      "color",
     "id":        "slide-bg-color",
     "label":     "Slide background color",
     "default":   "#AAB7B4"
  },
  {
     "type":      "color",
     "id":        "text-color",
     "label":     "Text color",
