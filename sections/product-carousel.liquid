<script type="text/javascript">
 $(".owl-carousel").owlCarousel({
   lazyLoad:true,
   loop:true,
   mouseDrag:true,
   touchDrag:true,
   singleItem: true,
   items : 1,
   itemsDesktop : false,
   itemsDesktopSmall : false,
   itemsTablet: false,
   itemsMobile : false
 });
</script>


{% schema %}
{
  "name": "Product carousel slide",
  "settings": [
  {
   "id": "featured-slide-title",
   "type": "text",
   "label": "Featured product title",
   "default": "Title"
  },
  {
   "id": "featured-slide-description",
   "type": "textarea",
   "label": "Featured product description",
   "default": "Featured Description"
  },
  {
   "id": "details-one",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-two",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-three",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
   "id": "details-four",
   "type": "text",
   "label": "featured slide details",
   "default": "Featured Details"
  },
  {
      "type": "image_picker",
      "id": "product-image",
      "label": "Product Image"
  },
  {
      "type": "image_picker",
      "id": "Featured-product-full-bg",
      "label": "Full background image (alternative to featured product slides)"
  },
  {
     "type":      "color",
     "id":        "slide-bg-color",
     "label":     "Slide background color",
     "default":   "#AAB7B4"
  }
  ],
  "presets": [
    {
      "name": "Product carousel slide",
      "category": "Product carousel slide"
    }
  ]
}
{% endschema %}
