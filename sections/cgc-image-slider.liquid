<div class="cgc-carousel-wrapper">
  <div class="owl-carousel owl-theme">

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'Featured-image' %}
              {%- if block.settings.Featured-product-full-bg -%}
                {%- assign featured_image = block.settings.Featured-product-full-bg | img_url: '1800x' -%}
              {%- else -%}
                {%- assign about_image = 'blank.svg' | asset_url -%}
              {%- endif -%}
              <div class="item full-bg-image">
                <div class="featured-image-container" style="background-image:url({{ featured_image }}); background-position:center; background-repeat: no-repeat; background-size: cover;">

                  {% if block.settings.overlay-text-option == "center"%}

                    <div class="slider-text-overlay">
                      <div class="overlay-text-box" data-animation-in="fadeInUp">
                        <div class="overlay-text animated">
                          <h3> {{ block.settings.center-text-title }} </h3>
                        </div>
                      </div>
                    </div>

                    {% elsif block.settings.overlay-text-option == "left" %}

                    {% if block.settings.enable-border-outline %}
                        <div class="left-overlay-text-box" data-animation-in="fadeInUp" style="width: auto; padding: 16px 30px; border: 2px solid white;">

                      {% else %}

                        <div class="left-overlay-text-box" data-animation-in="fadeInUp">
                    {% endif %}

                      <div class="left-overlay-text animated" >
                        <div class="left-text" style="color:{{ block.settings.image-slider-text-color }};">
                          <h3 style="color:{{ block.settings.image-slider-text-color }};">{{ block.settings.left-text-title }}</h3>
                          <div class="left-text-contnet" style="color:{{ block.settings.image-slider-text-color }};"> {{ block.settings.left-text-content }} </div>
                            {% if block.settings.enable-slide-button %}
                              <button type="button" name="button" class="slide-button" onclick="location.href='http://www.example.com'">Learn More</button>
                            {% endif %}
                        </div>
                      </div>
                    </div>

                    {% elsif block.settings.overlay-text-option == "right" %}

                    {% elsif block.settings.overlay-text-option == "none" %}

                  {% endif %}

                </div>


              </div>

         {% when 'featured-sink'  %}
         <div class="item featured-sink-item">
              <div class="featured-sink-bg" style="background-color:{{ block.settings.featured-sink-bg-color }}"></div>
               <div class="featured-sink-container">
                 <div class="container full-width" stlye="height:-webkit-fill-available;">
                   <div class="borderline-left" style="background-color:{{ block.settings.borderline-left }}"></div>
                   <div class="borderline-right"  style="background-color:{{ block.settings.borderline-right }}"></div>
                   <h3 class="offset-text-top animated" style="color:{{ block.settings.featured-text-color}}">{{ block.settings.text-top }}</h3>
                   <h3 class="offset-text-bottom" style="color:{{ block.settings.featured-text-color}}">{{ block.settings.text-bottom }}</h3>
                   <img src="{{ block.settings.featured-sink-img | img_url: '1024x' }}" alt="" class="featured-sink-img">
                 </div>
               </div>
         </div>

        {% endcase %}




      {% endfor %}

  </div>
</div>


<script type="text/javascript">
 $(".owl-carousel").owlCarousel({
   animateIn: 'flipInX',
   lazyLoad:true,
   loop:true,
   autoplay:false,
   autoplayTimeout:8000,
   autoplayHoverPause:true,
   mouseDrag:true,
   touchDrag:true,
   singleItem: true,
   items : 1,
   itemsDesktop : false,
   itemsDesktopSmall : false,
   itemsTablet: false,
   dotsData: false,
   dots:true,
   itemsMobile: false,
   responsive : {
       // breakpoint from 0 up
       0 : {
         dots:false
       },
       // breakpoint from 480 up
       480 : {
         dots:false
       },
       800 : {
         dots:true
       }
   }
 });

</script>


