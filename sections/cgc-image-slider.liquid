<div class="cgc-carousel-wrapper">
  <div class="owl-carousel owl-theme">

      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'Featured-image' %}
              {%- if block.settings.Featured-product-full-bg -%}
                {%- assign featured_image = block.settings.Featured-product-full-bg | img_url: '1800x' -%}
              {%- else -%}
                {%- assign about_image = 'blank.svg' | asset_url -%}
              {%- endif -%}
              <div class="item full-bg-image">
                <div class="featured-image-container" style="background-image:url({{ featured_image }}); background-position:center; background-repeat: no-repeat; background-size: cover; ">

                </div>
              </div>

         {% when 'featured-sink'  %}
         <div class="item featured-sink-item">
              <div class="featured-sink-bg" style="background-color:{{ block.settings.featured-sink-bg-color }}"></div>
             <div class="featured-sink-container">
               <div class="container full-width" stlye="height:-webkit-fill-available;">
                 <div class="borderline-left" style="background-color:{{ block.settings.borderline-left }}"></div>
                 <div class="borderline-right"  style="background-color:{{ block.settings.borderline-right }}"></div>
                 <h3 class="offset-text-top" style="color:{{ block.settings.featured-text-color}}">{{ block.settings.text-top }}</h3>
                 <h3 class="offset-text-bottom" style="color:{{ block.settings.featured-text-color}}">{{ block.settings.text-bottom }}</h3>
                 <img src="{{ block.settings.featured-sink-img | img_url: '1024x' }}" alt="" class="featured-sink-img">
               </div>
             </div>
         </div>

        {% endcase %}




      {% endfor %}

  </div>
</div>


<script type="text/javascript">
 $(".owl-carousel").owlCarousel({
   lazyLoad:true,
   loop:true,
   autoplay:true,
   autoplayTimeout:8000,
   autoplayHoverPause:true,
   mouseDrag:true,
   touchDrag:true,
   singleItem: true,
   items : 1,
   itemsDesktop : false,
   itemsDesktopSmall : false,
   itemsTablet: false,
   dotsData: false,
   dots:true,
   itemsMobile: false
 });

</script>


{% schema %}
{
  "name": "CGC Image Slider",
  "max_blocks": 8,
  "settings": [

  ],
  "blocks": [
  {
    "type": "Featured-image",
    "name": "Full background image",
    "settings": [
      {
      "type": "image_picker",
      "id": "Featured-product-full-bg",
      "label": "Full background image"
     }
    ]
  },
  {
    "type": "featured-sink",
    "name": "Featured sink",
    "settings": [
    {
      "type": "image_picker",
      "id": "featured-sink-img",
      "label": "Featured sink img"
    },
    {
      "type":      "color",
      "id":        "featured-sink-bg-color",
      "label":     "Slide background color",
      "default":   "#AAB7B4"
    },
    {
      "type":      "color",
      "id":        "featured-text-color",
      "label":     "Font color",
      "default":   "#38373E"
    },
    {
      "type":      "color",
      "id":        "borderline-left",
      "label":     "border line left color",
      "default":   "#AAB7B4"
    },
    {
      "type":      "color",
      "id":        "borderline-right",
      "label":     "border line right color",
      "default":   "#AAB7B4"
    },
    {
     "id": "text-top",
     "type": "text",
     "label": "Featured product title",
     "default": "Text top"
    },
    {
     "id": "text-bottom",
     "type": "text",
     "label": "Featured product title",
     "default": "Text bottom"
    }
    ]
  }
],
  "presets": [
    {
      "name": "CGC Image Slider",
      "category": "images"
    }
  ]
}
{% endschema %}
